<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.wswj.ai.infrastructure.dao.AiClientAdvisorDao">
    <resultMap id="BaseResultMap" type="fun.wswj.ai.infrastructure.dao.po.AiClientAdvisor">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="advisor_id" property="advisorId" jdbcType="VARCHAR" />
        <result column="advisor_name" property="advisorName" jdbcType="VARCHAR" />
        <result column="advisor_type" property="advisorType" jdbcType="VARCHAR" />
        <result column="order_num" property="orderNum" jdbcType="INTEGER" />
        <result column="ext_param" property="extParam" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="TINYINT" />
        <result column="create_time" property="createTime" jdbcType="DATE" />
        <result column="update_time" property="updateTime" jdbcType="DATE" />
    </resultMap>
    
    <select id="queryValidByAdvisorIds" resultType="fun.wswj.ai.infrastructure.dao.po.AiClientAdvisor">
        SELECT * FROM ai_client_advisor
        WHERE advisor_id IN
        <foreach item="item" collection="list" separator="," open="(" close=")" index="index">
            #{item}
        </foreach>
        AND status = 1
    </select>
</mapper>