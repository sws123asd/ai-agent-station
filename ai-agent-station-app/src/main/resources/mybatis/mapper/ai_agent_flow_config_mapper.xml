<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.wswj.ai.infrastructure.dao.AiAgentFlowConfigDao">

    <resultMap id="BaseResultMap" type="fun.wswj.ai.infrastructure.dao.po.AiAgentFlowConfig">
            <id property="id" column="id" />
            <result property="agentId" column="agent_id" />
            <result property="clientId" column="client_id" />
            <result property="clientName" column="client_name" />
            <result property="clientType" column="client_type"/>
            <result property="sequence" column="sequence" />
            <result property="stepPrompt" column="step_prompt" />
            <result property="createTime" column="create_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,agent_id,client_id, client_name, client_type, sequence, step_prompt, create_time
    </sql>
    <select id="queryByAiAgentId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from ai_agent_flow_config
        where agent_id = #{agentId}
        order by sequence
    </select>
</mapper>
